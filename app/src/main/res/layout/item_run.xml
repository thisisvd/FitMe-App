<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="6dp"
    android:paddingRight="12dp"
    android:paddingLeft="12dp"
    android:paddingBottom="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_background" >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="211dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="6dp">

        <ImageView
            android:id="@+id/ivRunImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@drawable/white_curve_background"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/runWeatherStatusIcon"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/weather_icons8" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/runWeatherStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@+id/h_news_time_icon"
                    android:fontFamily="@font/segoeui"
                    android:maxLines="1"
                    android:text="Hazy"
                    android:textColor="@color/black_normal_text"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:fontFamily="@font/segoeui"
                    android:text="~"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/runWeatherCelciusIcon"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/temperature_icons8" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/runWeatherCelcius"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@+id/h_news_time_icon"
                    android:fontFamily="@font/segoeui"
                    android:maxLines="1"
                    android:text="18 C"
                    android:textColor="@color/black_normal_text"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:fontFamily="@font/segoeui"
                    android:text="~"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/runWindSpeedIcon"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/wind_flow_icons8" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/runWindSpeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@+id/h_news_time_icon"
                    android:fontFamily="@font/segoeui"
                    android:maxLines="1"
                    android:text="Wind"
                    android:textColor="@color/black_normal_text"
                    android:textSize="11sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <ImageView
                android:id="@+id/removeRun"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:src="@drawable/ic_baseline_delete_24" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/blue_card_curve_background"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingTop="3dp"
            android:paddingRight="5dp"
            android:paddingBottom="3dp">

            <ImageView
                android:layout_width="15sp"
                android:layout_height="15sp"
                android:src="@drawable/time_icons8" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:fontFamily="@font/segoeui"
                android:text="TIME"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/yellow_card_curve_background"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingTop="3dp"
            android:paddingRight="5dp"
            android:paddingBottom="3dp">

            <ImageView
                android:id="@+id/h_news_time_icon"
                android:layout_width="15sp"
                android:layout_height="15sp"
                android:src="@drawable/timeline_date_icons8" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:fontFamily="@font/segoeui"
                android:text="Date"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp">

        <LinearLayout
            android:id="@+id/cardViewDistLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/red_card_curve_background"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingTop="3dp"
            android:paddingRight="5dp"
            android:paddingBottom="3dp">

            <ImageView
                android:layout_width="15sp"
                android:layout_height="15sp"
                android:src="@drawable/distance_icons8" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:fontFamily="@font/segoeui"
                android:text="DISTANCE"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/green_card_curve_background"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingTop="3dp"
            android:paddingRight="5dp"
            android:paddingBottom="3dp">

            <ImageView
                android:layout_width="15sp"
                android:layout_height="15sp"
                android:src="@drawable/speed_icons8" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvAvgSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:fontFamily="@font/segoeui"
                android:text="AVGSPEED"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cardViewCaloriesLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/light_orange_card_curve_background"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="3dp"
            android:paddingTop="3dp" >

            <ImageView
                android:layout_width="15sp"
                android:layout_height="15sp"
                android:src="@drawable/calories_burn_icons8" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvCalories"
                android:fontFamily="@font/segoeui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginLeft="6dp"
                android:text="CALORIES" />

        </LinearLayout>

    </RelativeLayout>

    </LinearLayout>

</LinearLayout>