                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_marginRight="5dp"
                                android:src="@drawable/distance_icons8" />

                            <TextView
                                android:id="@+id/homeLastDist"
                                android:layout_width="wrap_content"
